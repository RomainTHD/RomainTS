{
	"name": "romaints",
	"version": "1.0.0",
	"description": "RomainTS",
	"type": "module",
	"funding": {
		"url": "https://github.com/sponsors/RomainTHD/",
		"type": "individual"
	},
	"homepage": "https://github.com/RomainTHD/RomainTS",
	"author": "Romain THD",
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/RomainTHD/RomainTS/issues"
	},
	"scripts": {
		"build": "node -r dotenv/config --loader tsx esbuild.config.js",
		"format": "prettier --write .",
		"lint": "npx eslint . --fix --max-warnings=0",
		"postinstall": "husky install",
		"postpublish": "pinst --enable",
		"prepare": "husky install",
		"prepublishOnly": "pinst --disable",
		"start": "tsx ./src/main.ts -i ./example.ts",
		"start:typecheck": "tsx ./src/main.ts -i ./example.ts --typecheck-only",
		"start:execute": "tsx ./src/main.ts -i ./example.ts --execute-only",
		"start:watch": "tsx watch src/index.ts",
		"start:debug": "node --inspect --loader tsx 'src/index.ts'",
		"test": "vitest run -r ./src",
		"test:dev": "vitest dev -r ./src",
		"testsuite": "python3 testsuite.py"
	},
	"private": true,
	"dependencies": {
		"chalk": "^5.3.0",
		"commander": "^11.0.0",
		"dotenv": "^16.3.1",
		"tslib": "^2.6.1",
		"typescript": "~5.1.6"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.7",
		"@commitlint/config-conventional": "^17.6.7",
		"@tsconfig/node16": "^16.1.0",
		"@types/jasmine": "~4.3.5",
		"@types/node": "^20.4.8",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.46.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-config-standard-with-typescript": "^37.0.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"jasmine": "^5.1.0",
		"jasmine-core": "~5.1.0",
		"prettier": "^3.0.1",
		"prettier-standard": "^16.4.1",
		"tsx": "^3.12.7",
		"vite": "^4.4.9",
		"vitest": "^0.34.1"
	}
}
